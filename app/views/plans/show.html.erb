<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>名前</th>
    <td>
      <%= @plan.title %>
    </td>
  </tr>
  <tr>
    <th>開始日</th>
    <td>
      <%= @plan.StartDay.to_s(:datetime_jp)%>
    </td>
  </tr>
  <tr>
    <th>終了日</th>
    <td>
      <%= @plan.EndDay.to_s(:datetime_jp) %>
    </td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <%= @plan.AllDay %>
    </td>
  </tr>

  <tr>
    <th>スケジュール更新日時</th>
    <td>
      <%= @plan.updated_at.to_s(:datetime_jp)%>
    </td>
  </tr>

  <tr>
    <th>スケジュールメモ</th>
    <td>
      <%= @plan.memo%>
    </td>
  </tr>


</table>

<div>
  <p>
    <%= link_to "スケジュール一覧に戻る" , :plans %>
  </p>
  <p>
    <%= link_to "スケジュールを編集する" , [:edit, @plan] %>
  </p>
  <p>
    <%= link_to "スケジュールを削除する", @plan, method: :delete, data: { confirm: "本当に削除しますか？" } %>
  </p>
</div>
