<h3>スケジュール編集</h3>

<%= form_with model: @plan do |f| %>
  <table>
    <tr>
      <th>
        <%= f.label :title ,"タイトル" %>
      </th>
      <td>
        <%= f.text_field :title %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label :StartDay ,"開始日" %>
      </th>
      <td>
        <%= f.date_field :StartDay %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label :EndDay ,"終了日" %>
      </th>
      <td>
        <%= f.date_field :EndDay %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label :AllDay ,"終日" %>
      </th>
      <td>
        <%= f.check_box :AllDay %>
      </td>
    </tr>

    <tr>
      <th>
        <%= f.label :memo ,"スケジュールメモ" %>
      </th>
      <td>
        <%= f.text_area :memo %>
      </td>
    </tr>


  </table>



  <div>
    <p>
      <%= f.submit "編集を完了する" %>
    </p>
    <p>
      <%= link_to "スケジュール一覧に戻る" , :plans %>
    </p>

  </div>
  <% end %>
